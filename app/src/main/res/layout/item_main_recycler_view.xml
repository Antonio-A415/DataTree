<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardUser"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:backgroundTint="@color/md_theme_surface"
    app:cardCornerRadius="18dp"
    app:cardElevation="6dp"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Imagen redondeada -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/idInstitucion"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/agricultor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Nombre + Verificado -->
        <TextView
            android:id="@+id/usernameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingStart="5dp"
            android:maxLines="1"
            android:fontFamily="@font/poppins_medium"
            android:text="Fernando Quetzal"
            android:textColor="@color/md_theme_onSurface"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/idInstitucion"
            app:layout_constraintTop_toTopOf="@id/idInstitucion"
            app:layout_constraintEnd_toStartOf="@id/lottieVerified"
            app:layout_constraintHorizontal_bias="0" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieVerified"
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/verified"
            app:layout_constraintStart_toEndOf="@id/usernameTv"
            app:layout_constraintTop_toTopOf="@id/usernameTv"
            app:layout_constraintBottom_toBottomOf="@id/usernameTv"
            android:layout_marginStart="4dp"/>

        <!-- Estado -->
        <TextView
            android:id="@+id/statusTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="En línea"
            android:paddingStart="5dp"
            android:textColor="@color/md_theme_onSurface"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@id/usernameTv"
            app:layout_constraintTop_toBottomOf="@id/usernameTv"
            android:layout_marginTop="4dp"/>

        <!-- Dirección -->
        <TextView
            android:id="@+id/tvDireccion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:fontFamily="@font/poppins_medium"
            android:text="Cerca de tu zona agrícola"
            android:paddingStart="5dp"
            android:textColor="@color/accent_green_"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/statusTv"
            app:layout_constraintTop_toBottomOf="@id/statusTv"
            app:layout_constraintEnd_toStartOf="@id/audioCallBtn"
            android:layout_marginTop="2dp"/>

        <!-- Botones de acción alineados a la derecha -->
        <ImageView
            android:id="@+id/audioCallBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/call_24px"
            app:layout_constraintEnd_toStartOf="@id/videoCallBtn"
            app:layout_constraintTop_toTopOf="@id/idInstitucion"
            app:layout_constraintBottom_toBottomOf="@id/idInstitucion"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:id="@+id/videoCallBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/video_chat_24px"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/audioCallBtn"
            app:layout_constraintBottom_toBottomOf="@id/audioCallBtn" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
