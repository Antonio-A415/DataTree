<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activitys.visor.VisorActivity">

    <!-- Vista de la cámara usando CameraX como capa base -->
    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <!-- Recuadro para la planta detectada - centrado en pantalla -->
    <View
        android:id="@+id/plantDetectionBox"
        android:layout_width="400dp"
        android:layout_height="550dp"
        android:layout_gravity="center"
        android:background="@drawable/detection_box"
        android:visibility="visible" />

    <!-- Mensaje superior de instrucciones -->
    <TextView
        android:id="@+id/instructionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="22dp"
        android:background="#80000000"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:padding="12dp"
        android:text="Apunte la cámara hacia la planta"
        android:textColor="@color/white"
        android:textSize="18sp" />


    <!-- Panel para mostrar información de la planta - parte inferior central -->
    <androidx.cardview.widget.CardView
        android:id="@+id/plantInfoPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="190dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="#B0000000"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/plantNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre de la planta"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/plantSuggestionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Sugerencias de cuidado"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/healthStatusLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salud: "
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <RatingBar
                    android:id="@+id/healthRatingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="0"
                    android:stepSize="0.5" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



    <!-- Barra de control inferior con botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="32dp"
        android:paddingTop="16dp"
        android:background="#40000000">

        <ImageButton
            android:id="@+id/flashButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/rounded_button_background"
            android:contentDescription="Flash"
            android:src="@drawable/light_mode_24"
            android:layout_marginEnd="48dp" />

        <Button
            android:id="@+id/captureButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green_low"
            android:fontFamily="@font/poppins_medium"
            android:text="Analizar planta"
            android:textColor="@color/white"
            app:icon="@drawable/open_new_next"
            app:iconGravity="end"
            app:iconPadding="5dp" />

        <ImageButton
            android:id="@+id/infoButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/rounded_button_background"
            android:contentDescription="Información"
            android:src="@android:drawable/ic_menu_info_details"
            android:layout_marginStart="48dp" />
    </LinearLayout>

    <!-- Indicador de carga principal - centrado en pantalla -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:visibility="visible">
        <ProgressBar
            android:id="@+id/loadingIndicator"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:indeterminateTint="@color/white"
            android:visibility="gone" />
        <!-- Indicador de estado del análisis - esquina superior derecha -->
        <TextView
            android:id="@+id/analyzeStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="#80FF0000"
            android:padding="8dp"
            android:text="Analizando..."
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:visibility="gone" />

    </LinearLayout>

</FrameLayout>