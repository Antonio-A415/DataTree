<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Mensaje del Usuario -->
    <LinearLayout
        android:id="@+id/userLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:visibility="gone">


        <!-- Contenido -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/userImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:visibility="gone"
                android:contentDescription="Avatar del usuario" />

            <TextView
                android:id="@+id/userMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_message_user"
                android:maxWidth="280dp"
                android:padding="12dp"
                android:textColor="@color/md_theme_onSurface"
                android:visibility="gone" />

            <TextView
                android:id="@+id/userTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/md_theme_onSurface"
                android:paddingTop="2dp"
                android:layout_gravity="end" />
        </LinearLayout>


        <!-- Avatar usuario -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userAvatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="centerCrop"
            android:layout_marginStart="8dp"
            android:src="@drawable/bunny_24px" />
    </LinearLayout>

    <!-- Mensaje del Bot -->
    <LinearLayout
        android:id="@+id/botLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal"
        android:visibility="gone">

        <!-- Avatar bot -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/botAvatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp"
            android:src="@drawable/bot_24px" />

        <!-- Contenido -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/botImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:visibility="gone" />

            <TextView
                android:id="@+id/botMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_message_user"
                android:maxWidth="280dp"
                android:padding="12dp"
                android:textColor="@color/md_theme_onSurface"
                android:visibility="gone" />

            <TextView
                android:id="@+id/botTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:paddingTop="2dp"
                android:layout_gravity="start" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
