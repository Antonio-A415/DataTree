<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/md_theme_surface"
    tools:context=".fragments.analytics.AnalyticsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header con título y status -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/md_theme_surface"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_agriculture_24px"
                    app:tint="@color/md_theme_onPrimaryContainer" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monitor Agrícola"
                        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                        android:textColor="@color/md_theme_onPrimaryContainer" />

                    <TextView
                        android:id="@+id/tv_connection_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Arduino conectado"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/md_theme_onPrimaryContainer"
                        android:alpha="0.8" />

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_refresh"
                    style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_refresh_24px"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Tarjetas de sensores -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- Temperatura -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/md_theme_surface"
                app:cardCornerRadius="16dp"
                app:cardElevation="1dp"
                app:strokeColor="@color/md_theme_outline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/circle_background_temperature"
                        android:backgroundTint="@color/md_theme_surfaceVariant"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_thermostat_24px"
                            app:tint="@color/accent_red" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Temperatura"
                            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                            android:textColor="@color/md_theme_onSurface"
                            android:alpha="0.9" />

                        <TextView
                            android:id="@+id/tv_temperature_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24.5°C"
                            android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                            android:textColor="@color/md_theme_onSurface"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/tv_temperature_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Óptimo"
                            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                            android:textColor="@color/white"
                            android:background="@drawable/status_background_good"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Humedad del Aire -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/md_theme_surface"
                app:cardCornerRadius="16dp"
                app:cardElevation="1dp"
                app:strokeColor="@color/md_theme_outline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/circle_background_temperature"
                        android:backgroundTint="@color/md_theme_surfaceVariant"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_humidity_24px"
                            app:tint="@color/blue_strong" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Humedad del Aire"
                            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                            android:textColor="@color/md_theme_onSurface"
                            android:alpha="0.9" />

                        <TextView
                            android:id="@+id/tv_air_humidity_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="65%"
                            android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                            android:textColor="@color/md_theme_onSurface"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/tv_air_humidity_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Normal"
                            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                            android:textColor="@color/white"
                            android:background="@drawable/status_background_normal"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Humedad del Suelo -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/md_theme_surface"
                app:cardCornerRadius="16dp"
                app:cardElevation="1dp"
                app:strokeColor="@color/md_theme_outline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:gravity="center"
                            android:background="@drawable/circle_background_temperature"
                            android:backgroundTint="@color/md_theme_surfaceVariant">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_soil_24px"
                                app:tint="@color/yellow_strong" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Humedad del Suelo"
                                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                                android:textColor="@color/md_theme_onSurface"
                                android:alpha="0.9" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/TextAppearance.AppCompat.Body2"
                                android:text="Advertencia: Sensor NO conectado"
                                android:textSize="15sp"
                                android:alpha="0.8"
                                android:textColor="@color/accent_red"/>
                            <TextView
                                android:id="@+id/tv_soil_humidity_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2340"
                                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                                android:textColor="@color/md_theme_onSurface"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="end">

                            <TextView
                                android:id="@+id/tv_soil_humidity_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bajo"
                                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                android:textColor="@color/md_theme_error"
                                android:background="@drawable/status_background_warning"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Barra de progreso para humedad del suelo -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/md_theme_onSurface"
                            android:alpha="0.9" />

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/progress_soil"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="12dp"
                            android:progress="57"
                            app:indicatorColor="@color/soil_color"
                            app:trackColor="@color/md_theme_surfaceVariant"
                            app:trackCornerRadius="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4095"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/md_theme_onSurface"
                            android:alpha="0.8" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Estadísticas de lecturas -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/md_theme_surface"
            app:cardCornerRadius="16dp"
            app:cardElevation="1dp"
            app:strokeColor="@color/md_theme_outline"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estadísticas de Lecturas"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="@color/md_theme_onSurface"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Lecturas válidas -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_valid_readings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18"
                            android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
                            android:textColor="@color/md_theme_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Válidas"
                            android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                            android:textColor="@color/md_theme_onSurface"
                            android:alpha="0.8" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="60dp"
                        android:background="@color/md_theme_outline"
                        android:alpha="0.3" />

                    <!-- Lecturas fallidas -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_failed_readings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
                            android:textColor="@color/md_theme_error" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fallidas"
                            android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                            android:textColor="@color/md_theme_onSurface"
                            android:alpha="0.8" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="60dp"
                        android:background="@color/md_theme_outline"
                        android:alpha="0.3" />

                    <!-- Error porcentual -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_error_percent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10%"
                            android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
                            android:textColor="@color/md_theme_tertiary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Error"
                            android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                            android:textColor="@color/md_theme_onSurface"
                            android:alpha="0.8" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_npk_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/md_theme_surface"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeColor="@color/md_theme_primary"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Encabezado NPK -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_science_24px"
                        app:tint="@color/md_theme_primary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estimación NPK"
                            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                            android:textColor="@color/md_theme_onSurface" />

                        <TextView
                            android:id="@+id/tv_npk_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="En espera de lectura"
                            android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                            android:textColor="@color/white"
                            android:background="@drawable/status_background_normal"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Parámetros de entrada -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parámetros"
                    android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                    android:textColor="@color/md_theme_onSurface"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Tipo de Suelo -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tipo de Suelo"
                            android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                            android:textColor="@color/md_theme_onSurface"
                            android:alpha="0.8"
                            android:layout_marginBottom="4dp" />

                        <Spinner
                            android:id="@+id/spinner_soil_type"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/status_background_normal"
                            android:padding="8dp" />

                    </LinearLayout>

                    <!-- Cultivo Antecesor -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Planta Antecesora"
                            android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                            android:textColor="@color/md_theme_onSurface"
                            android:alpha="0.8"
                            android:layout_marginBottom="4dp" />

                        <Spinner
                            android:id="@+id/spinner_previous_crop"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/status_background_normal"
                            android:padding="8dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/md_theme_outline"
                    android:alpha="0.3"
                    android:layout_marginVertical="16dp" />

                <!-- Resultados NPK -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resultados"
                    android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                    android:textColor="@color/md_theme_onSurface"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Nitrógeno (N) -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/circle_background_temperature"
                        android:backgroundTint="@color/md_theme_surfaceVariant"
                        android:padding="12dp"
                        android:gravity="center"
                        android:layout_marginEnd="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N"
                            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                            android:textColor="@color/green_more_strong"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_nitrogen_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="---"
                            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                            android:textColor="@color/md_theme_onSurface"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <!-- Fósforo (P) -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/circle_background_temperature"
                        android:backgroundTint="@color/md_theme_surfaceVariant"
                        android:padding="12dp"
                        android:gravity="center"
                        android:layout_marginHorizontal="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="P"
                            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                            android:textColor="@color/yellow_strong"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_phosphorus_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="---"
                            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                            android:textColor="@color/md_theme_onSurface"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <!-- Potasio (K) -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/circle_background_temperature"
                        android:backgroundTint="@color/md_theme_surfaceVariant"
                        android:padding="12dp"
                        android:gravity="center"
                        android:layout_marginStart="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="K"
                            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                            android:textColor="@color/blue_strong"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_potassium_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="---"
                            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                            android:textColor="@color/md_theme_onSurface"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Recomendaciones -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/md_theme_primaryContainer"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="start">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_info_24px"
                            app:tint="@color/md_theme_onPrimaryContainer"
                            android:layout_marginEnd="8dp"
                            android:layout_gravity="start|top"
                            android:layout_marginTop="2dp" />

                        <TextView
                            android:id="@+id/tv_npk_recommendation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Esperando lecturas de sensores para calcular NPK..."
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/md_theme_onPrimaryContainer" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
        <!-- Botones de control -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_start_monitoring"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Iniciar"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="@color/md_theme_onSurface"
                app:icon="@drawable/ic_play_24px"
                app:iconTint="@color/md_theme_onSurface"
                app:iconGravity="textStart"
                android:backgroundTint="@color/green_more_strong"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_stop_monitoring"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Detener"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                app:icon="@drawable/ic_cancel_24px"
                app:iconTint="@color/accent_red"
                app:iconGravity="textStart" />

        </LinearLayout>

        <!-- Información adicional -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/md_theme_surfaceVariant"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_info_24px"
                    android:alpha="0.9" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Los datos se actualizan cada 20 segundos durante el ciclo de monitoreo"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="@color/md_theme_onSurfaceVariant" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>