<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/liked"
        android:drawable="@drawable/favorite_24"
        android:state_checked="true"/>
    <item
        android:id="@+id/not_liked"
        android:drawable="@drawable/favorite_border_24"/>

    <transition
        android:fromId="@id/not_liked"
        android:toId="@id/liked">
        <animated-vector android:drawable="@drawable/favorite_border_24">
            <target
                android:name="heart"
                android:animation="@animator/heart_fill"/>
            <target
                android:name="group"
                android:animation="@animator/heart_scale"/>
        </animated-vector>
    </transition>
</animated-selector>